#include<iostream.h>
#include<stdio.h>
class List
{ 
public:
int arr[20];
int cmp_count; 
int mov_count; 
int n; 
List()
{
cmp_count=0;
mov_count=0;
} 
void read()
{ 
while(true)
{
cout<<"\nEnter the number of elements in the array :";
cin>>n; 
if(n<=5) 
break; 
else 
cout<<"\n Array can have maximum 5 elements. \n";
cout<<"\n---------------------------\n";
cout<<"Enter array elements \n";
cout<<"------------------------\n";
for(int i=0; i<n ; i++)
{
cout<<"<"<<(i+1)<< ">";
cin>> arr[i]; 
}
}
void swap(int x, int y)
{ 
int temp ; 
temp=arr[x];
arr[x]=arr[y];
arr[y]=temp; 
} 
void q_sort(int low, int high) 
{ 
int pivot ,i,j; 
if(low>high) 
return; 
i= low+1;
j=high; 
pivot = arr[low]; 
while(i<=j)
{ 
while((arr[i]<=pivot)&&(i<=high))
{
i++; 
cmp_count++;
} 
cmp_count++; 
while((arr[j]>pivot)&&(j>=low))
{
j--;
cmp_count++;
if(i<j) 
{ 
swap(i,j);
mov_count++;
}
}
if(low<j)
{
swap(low,j); 
mov_count++;
} 
q_sort(low,j-1);
q_sort(j+1,high);
} 
void display()
{
cout<<"\n-----------------------\n";
cout<<"Sorted array elements \n";
cout<<"---------------------\n";
for(int j=0;j<n;j++)
{ 
cout<<arr[j]<<endl;
cout<<"\nNumber of comparisons:"<<cmp_count;
cout<<"\nNumber of data movements:"<<mov_count; 
}
int getSize()
{
return(n);
} 
};
void main()
{ 
List myList; 
myList.read(); 
myList.q_sort(0,myList.getSize()-1);
myList.display();
}
